<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ============== Building Base Abstract ==================-->
  
  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
    <statBases>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
  </ThingDef>
  
  <!-- ================ Building Repellent ====================-->
  
  <ThingDef ParentName="BuildingBase">
    <defName>Building_Repellent</defName>
    <thingClass>Insecticide.Building_Repellent</thingClass>
    <label>insect repellent</label>
    <description>Removes the possibility of infestations within a certain radius.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Buildings/InsectRepellent</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <canOverlapZones>false</canOverlapZones>
    <constructEffect>ConstructMetal</constructEffect>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>1</fillPercent>
    <statBases>
      <MaxHitPoints>800</MaxHitPoints>
      <WorkToBuild>6000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>14</Beauty>
    </statBases>
    <size>(2,2)</size>
    <tickerType>Rare</tickerType>
    <selectable>true</selectable>
    <costList>
      <Steel>1000</Steel>
      <Component>12</Component>
    </costList>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(150,220,150,0)</glowColor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>800</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <designationCategory>Misc</designationCategory>
    <specialDisplayRadius>11.6</specialDisplayRadius>
  </ThingDef>
  
  
</Defs>